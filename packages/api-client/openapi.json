              "schema": {
                "$ref": "#/components/schemas/UnlinkMethodDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Auth method unlinked successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnlinkMethodResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Cannot unlink last auth method or method not found"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Unlink an auth method from the current user account",
        "tags": ["Auth"]
      }
    },
    "/ipfs/add": {
      "post": {
        "description": "Upload an encrypted file blob to IPFS via Pinata. Returns the CID and size.",
        "operationId": "IpfsController_add",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Encrypted file blob (max 100MB)"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File pinned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddResponseDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT token required"
          },
          "413": {
            "description": "Payload too large - file exceeds 100MB limit"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Pin encrypted file to IPFS",
        "tags": ["IPFS"]
      }
    },
    "/ipfs/upload": {
      "post": {
        "description": "Pins encrypted file to IPFS, checks storage quota, and records the pin for quota tracking. All in one atomic request.",
        "operationId": "IpfsController_upload",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Encrypted file blob (max 100MB)"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File uploaded, pinned, and recorded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UploadResponseDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT token required"
          },
          "413": {
            "description": "Storage quota exceeded"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Upload encrypted file to IPFS with quota tracking",
        "tags": ["IPFS"]
      }
    },
    "/ipfs/unpin": {
      "post": {
        "description": "Remove a pinned file from IPFS via Pinata using its CID.",
        "operationId": "IpfsController_unpin",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UnpinDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "File unpinned successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnpinResponseDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT token required"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Unpin file from IPFS",
        "tags": ["IPFS"]
      }
    },
    "/ipfs/{cid}": {
      "get": {
        "description": "Download an encrypted file from IPFS via the configured gateway.",
        "operationId": "IpfsController_get",
        "parameters": [
          {
            "name": "cid",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File retrieved successfully",
            "content": {
              "application/octet-stream": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT token required"
          },
          "404": {
            "description": "File not found"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Get file from IPFS",
        "tags": ["IPFS"]
      }
    },
    "/vault/init": {
      "post": {
        "description": "Create a new vault with encrypted keys on first sign-in. Returns 409 Conflict if vault already exists.",
        "operationId": "VaultController_initializeVault",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
