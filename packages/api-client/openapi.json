                "schema": {
                  "$ref": "#/components/schemas/VaultResponseDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - JWT token required"
          },
          "409": {
            "description": "Conflict - Vault already exists for this user"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ],
        "summary": "Initialize user vault",
        "tags": ["Vault"]
      }
    },
    "/vault/export": {
