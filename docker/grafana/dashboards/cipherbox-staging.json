      "title": "Republish Schedule Status Over Time",
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 28 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
