{
  "__inputs": [
    {
      "name": "DS_GRAFANA_CLOUD_METRICS",
      "label": "Grafana Cloud Metrics",
      "description": "Grafana Cloud Prometheus/Mimir data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_GRAFANA_CLOUD_LOGS",
      "label": "Grafana Cloud Logs",
      "description": "Grafana Cloud Loki data source",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "id": null,
  "uid": "cipherbox-staging",
  "title": "CipherBox Staging",
  "description": "Operational dashboard for CipherBox staging environment",
  "tags": ["cipherbox", "staging"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "fiscalYearStartMonth": 0,
  "liveNow": false,
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "stat",
      "title": "Total Users",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "blue", "value": null }]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "expr": "cipherbox_users_total",
          "legendFormat": "Users",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Files Stored",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "expr": "cipherbox_files_total",
          "legendFormat": "Files",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Storage Used",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 268435456 },
              { "color": "red", "value": 524288000 }
            ]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "expr": "cipherbox_storage_bytes_total",
          "legendFormat": "Storage",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total IPNS Entries",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "purple", "value": null }]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "expr": "sum(cipherbox_ipns_entries_total)",
          "legendFormat": "IPNS Entries",
          "refId": "A"
        }
      ]
    },
    {
      "type": "piechart",
      "title": "IPNS Entries by Type",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "pieType": "donut",
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "expr": "cipherbox_ipns_entries_total",
          "legendFormat": "{{ record_type }}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "File Uploads (24h)",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [{ "color": "green", "value": null }]
          },
          "color": { "mode": "thresholds" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "auto",
        "wideLayout": true
      },
      "targets": [
        {
          "expr": "increase(cipherbox_file_uploads_total[24h])",
          "legendFormat": "Uploads",
          "refId": "A"
        }
      ]
    },
    {
      "type": "row",
      "title": "File Operations",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false,
      "panels": []
    },
    {
      "type": "timeseries",
      "title": "File Uploads Over Time",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "spanNulls": false,
            "axisBorderShow": false,
            "drawStyle": "line",
            "pointSize": 5,
            "showPoints": "auto"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "rate(cipherbox_file_uploads_total[5m]) * 300",
          "legendFormat": "Uploads / 5m",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "File Downloads Over Time",
