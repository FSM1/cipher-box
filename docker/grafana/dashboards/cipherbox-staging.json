    {
      "type": "timeseries",
      "title": "IPNS Entry Growth",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
