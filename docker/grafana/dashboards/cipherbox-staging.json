          "expr": "rate(cipherbox_file_downloads_total[5m]) * 300",
          "legendFormat": "Downloads / 5m",
          "refId": "A"
        },
        {
          "expr": "rate(cipherbox_file_unpins_total[5m]) * 300",
          "legendFormat": "Unpins / 5m",
          "refId": "B"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Storage Growth",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "spanNulls": false,
            "drawStyle": "line",
            "pointSize": 5,
            "showPoints": "auto",
            "gradientMode": "scheme"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "cipherbox_storage_bytes_total",
          "legendFormat": "Total storage",
          "refId": "A"
        },
        {
          "expr": "rate(cipherbox_file_upload_bytes_total[1h]) * 3600",
          "legendFormat": "Upload rate (bytes/hr)",
          "refId": "B"
        }
      ]
    },
    {
      "type": "row",
      "title": "IPNS Operations",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false,
      "panels": []
    },
