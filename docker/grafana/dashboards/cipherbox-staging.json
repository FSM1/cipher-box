    {
      "type": "timeseries",
      "title": "IPNS Resolves Over Time",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 15 },
      "datasource": { "type": "prometheus", "uid": "${DS_GRAFANA_CLOUD_METRICS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
