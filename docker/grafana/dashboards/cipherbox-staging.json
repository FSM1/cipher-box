      "targets": [
        {
          "expr": "increase(cipherbox_republish_entries_processed_total{result=\"succeeded\"}[6h])",
          "legendFormat": "Succeeded",
          "refId": "A"
        },
        {
          "expr": "increase(cipherbox_republish_entries_processed_total{result=\"failed\"}[6h])",
          "legendFormat": "Failed",
          "refId": "B"
        }
      ]
    },
