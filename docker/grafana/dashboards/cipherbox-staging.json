        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "cipherbox_ipns_entries_total{record_type=\"folder\"}",
          "legendFormat": "Folder entries",
          "refId": "A"
        },
        {
          "expr": "cipherbox_ipns_entries_total{record_type=\"file\"}",
          "legendFormat": "File entries",
          "refId": "B"
        }
      ]
    },
    {
      "type": "row",
      "title": "TEE Republishing",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false,
      "panels": []
    },
    {
